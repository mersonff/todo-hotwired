<%= turbo_frame_tag dom_id(task) do %>
    <div class="d-flex align-items-center w-100" 
         data-controller="task-card" 
         data-action="mousedown->task-card#mouseDown mousemove->task-card#mouseMove mouseup->task-card#mouseUp click->task-card#click"
         data-task-card-task-id-value="<%= task.id %>">
        <%= button_to toggle_task_path(task), method: :patch, class: "checkbox", form: { style: "display: inline;" }, onclick: "event.stopPropagation();" do %>
            <% if task.completed? %>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7 12.5L10.5 16L17.5 9" stroke="#FDFBF6" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <% end %>
        <% end %>
        <div class="task-content flex-grow-1">
            <h4 class="task-title"><%= task.title.present? ? task.title : "Sem tÃ­tulo" %></h4>
            <div class="task-preview"><%= truncate(task.description.to_plain_text, length: 10) %></div>
        </div>
    </div>

    <div class="tags mt-2">
        <% task.tags.each do |tag| %>
            <span class="tag tag--warning"><%= tag.name %></span>
        <% end %>
    </div>

    <div class="post-it-footer">
        <%= button_to toggle_importance_task_path(task), method: :patch, class: "icon-star-wrapper", form: { style: "display: inline;" }, onclick: "event.stopPropagation();" do %>
            <% if task.important? %>
                <svg class="icon-star" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#FFF59D" stroke="#312F2F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            <% else %>
                <svg class="icon-star" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="none" stroke="#312F2F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            <% end %>
        <% end %>
        <%= link_to task_path(task), data: { action: "click->delete-task#delete" }, class: "icon-trash-wrapper", onclick: "event.stopPropagation();", title: "Excluir tarefa" do %>
            <svg class="icon-trash" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 6H5H21" stroke="#EF4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z" stroke="#EF4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M10 11V17" stroke="#EF4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 11V17" stroke="#EF4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        <% end %>
    </div>
<% end %>
